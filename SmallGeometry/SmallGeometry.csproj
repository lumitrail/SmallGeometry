<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <PackageId>SmallGeometry</PackageId>
    <Title>SmallGeometry</Title>
    <Version>0.2.0</Version>
    <Authors>lumitrail</Authors>
    <Company>lumitrail</Company>
    <Product>SmallGeometry</Product>
    <PackageProjectUrl>https://github.com/lumitrail/SmallGeometry</PackageProjectUrl>
    <RepositoryUrl>https://github.com/lumitrail/SmallGeometry</RepositoryUrl>
    <PackageTags>C#;.NET8.0</PackageTags>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DotSpatial.Projections" Version="4.0.656" />
    <PackageReference Include="System.IO.Hashing" Version="8.0.0" />
  </ItemGroup>

</Project>
